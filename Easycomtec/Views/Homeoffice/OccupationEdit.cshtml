@model  Easycomtec.Models.CandidatesModel

@{
    ViewBag.Title = "Edit";
}

<h3 class="text-center">Banco de Talentos - Easy Communication & Technology <span>(Developers/ Desenvolvedores)</span></h3>
<hr />
