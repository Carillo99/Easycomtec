<br />
<h4>Occupation area /Área de atuação</h4>
<hr />

@Html.HiddenFor(model => model.OccupationArea.OccupationAreaID)

<div class="form-group pad">
    @Html.LabelFor(model => model.OccupationArea.Name, htmlAttributes: new { @class = "col-form-label" })
    <div class="">
        @Html.EditorFor(model => model.OccupationArea.Name, new { htmlAttributes = new { @class = "form-control"} })
    </div>
</div>

<div class="form-group pad">
    @Html.LabelFor(model => model.OccupationArea.Skype, htmlAttributes: new { @class = "col-form-label" })
    <div class="">
        @Html.EditorFor(model => model.OccupationArea.Skype, new { htmlAttributes = new { @class = "form-control"} })
    </div>
</div>

<div class="form-group pad">
    @Html.LabelFor(model => model.OccupationArea.Linkedin, htmlAttributes: new { @class = "col-form-label" })
    <div class="">
        @Html.EditorFor(model => model.OccupationArea.Linkedin, new { htmlAttributes = new { @class = "form-control", type = "url", placeholder = "Your Linkedin" } })
    </div>
</div>

<div class="form-group pad">
    @Html.LabelFor(model => model.OccupationArea.Cyte, htmlAttributes: new { @class = "col-form-label" })
    <div class="">
        @Html.EditorFor(model => model.OccupationArea.Cyte, new { htmlAttributes = new { @class = "form-control"} })
    </div>
</div>

<div class="form-group pad">
    @Html.LabelFor(model => model.OccupationArea.State, htmlAttributes: new { @class = "col-form-label" })
    <div class="">
        @Html.EditorFor(model => model.OccupationArea.State, new { htmlAttributes = new { @class = "form-control"} })        
    </div>
</div>

<div class="form-group pad">
    @Html.LabelFor(model => model.OccupationArea.Portfolio, htmlAttributes: new { @class = "col-form-label" })
    <div class="">
        @Html.EditorFor(model => model.OccupationArea.Portfolio, new { htmlAttributes = new { @class = "form-control", type = "url"} })
    </div>
</div>

<div class="form-group pad">
    @Html.LabelFor(model => model.OccupationArea.Willingness, htmlAttributes: new { @class = "col-form-label" })
    <div class="radio-inline">
        <div class="custom-control ">
            @Html.RadioButtonFor(model => model.OccupationArea.Willingness, "Up to 4 hours per day", new { htmlAttributes = new { } })
            <label class="col-md-12" for="Willingness">Up to 4 hours per day / Até 4 horas por dia</label>
        </div>
        <div class="custom-control">
            @Html.RadioButtonFor(model => model.OccupationArea.Willingness, "4 to 6 hours per day", new { htmlAttributes = new {} })
            <label class="col-md-12" for="Willingness">4 to 6 hours per day / De 4 á 6 horas por dia</label>
        </div>
        <div class="custom-control">
            @Html.RadioButtonFor(model => model.OccupationArea.Willingness, "6 to 8 hours per day", new { htmlAttributes = new {  } })
            <label class="col-md-12" for="Willingness">6 to 8 hours per day /De 6 á 8 horas por dia</label>
        </div>
        <div class="custom-control">
            @Html.RadioButtonFor(model => model.OccupationArea.Willingness, "Up to 8 hours a day", new { htmlAttributes = new {} })
            <label class="col-md-12" for="Willingness">Up to 8 hours a day (are you sure?) / Acima de 8 horas por dia (tem certeza?)</label>
        </div>
        <div class="custom-control">
            @Html.RadioButtonFor(model => model.OccupationArea.Willingness, "Only weekends", new { htmlAttributes = new { } })
            <label class="col-md-12" for="Willingness">Only weekends / Apenas finais de semana</label>
        </div>
    </div>
</div>

<div class="form-group pad">
    @Html.LabelFor(model => model.OccupationArea.Horary, htmlAttributes: new { @class = "col-form-label", ng_required = "true" })
    <div class="radio-inline">
        <div class="custom-control">
            @Html.RadioButtonFor(model => model.OccupationArea.Horary, "from 08:00 a.m. to 12:00 a.m.", new { htmlAttributes = new {} })
            <label class="col-md-12" for="Horary">Morning(from 08:00 to 12:00) / Manhã(de 08:00 ás 12:00)</label>
        </div>
        <div class="custom-control">
            @Html.RadioButtonFor(model => model.OccupationArea.Horary, "from 1:00 p.m. to 6:00 p.m.", new { htmlAttributes = new {  } })
            <label class="col-md-12" for="Horary">Afternoon (from 1:00 p.m. to 6:00 p.m.) / Tarde (de 13:00 ás 18:00)</label>
        </div>
        <div class="custom-control">
            @Html.RadioButtonFor(model => model.OccupationArea.Horary, "7:00 p.m. to 10:00 p.m.", new { htmlAttributes = new {  } })
            <label class="col-md-12" for="Horary">Night (7:00 p.m. to 10:00 p.m.) /Noite (de 19:00 as 22:00)</label>
        </div>
        <div class="custom-control">
            @Html.RadioButtonFor(model => model.OccupationArea.Horary, "from 10 p.m. onwards", new { htmlAttributes = new {  } })
            <label class="col-md-12" for="Horary">Dawn (from 10 p.m. onwards) / Madrugada (de 22:00 em diante)</label>
        </div>
        <div class="custom-control">
            @Html.RadioButtonFor(model => model.OccupationArea.Horary, "from 08:00 a.m. to 18:00 p.m.", new { htmlAttributes = new {} })
            <label class="col-md-12" for="Horary">Business (from 08:00 a.m. to 06:00 p.m.) / Comercial (de 08:00 as 18:00)</label>
        </div>
    </div>
</div>

<div class="form-group pad">
    @Html.LabelFor(model => model.OccupationArea.Salary, htmlAttributes: new { @class = "col-form-label" })
    <div class="">
        @Html.EditorFor(model => model.OccupationArea.Salary, new { htmlAttributes = new { @class = "form-control"} })
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
